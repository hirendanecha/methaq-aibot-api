<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Complaint Report</title>
  <style>
  

    body {
      font-family: 'NotoUnicode', sans-serif;
      direction: ltr;
      padding: 40px;
    }

    h1 {
      text-align: center;
    }

    .details {
      margin-top: 30px;
    }

    .details p {
      margin: 5px 0;
    }

    footer {
      margin-top: 50px;
      text-align: center;
      font-size: 12px;
    }
  </style>
</head>
<body>
  <h1>Complaint & Suggestion Report</h1>

  <div class="details">
    <p><strong>Complaint Number:</strong> <%= complaintt.complainNumber %></p>
    <p><strong>Customer Name:</strong> <%= complaintt.customername %></p>
    <p><strong>Customer Email:</strong> <%= complaintt.customeremail %></p>
    <p><strong>Customer Phone:</strong> <%= complaintt.customerphone %></p>
    <p><strong>Complaint Type:</strong> <%= complaintt.complainType %></p>
    <p><strong>Complaint Description:</strong> <%= complaintt.complaindesc %></p>
  </div>

  <% if (complaintt.docUrl && complaintt.docUrl.length > 0) { %>
    <div class="attachments">
      <h3>Attachments:</h3>
      <div style="display: flex; flex-wrap: wrap; gap: 16px;">
        <% complaintt.docUrl.forEach(function(url, idx) { %>
          <div style="margin-bottom: 10px; border: 1px solid #ccc; padding: 6px; border-radius: 6px; background: #fafafa;">
            <img src="<%= url %>" alt="Attachment <%= idx + 1 %>" style="max-width: 200px; max-height: 200px; display: block;">
          </div>
        <% }); %>
      </div>
    </div>
  <% } %>
  <footer>
    Generated By: <%= complaintt.generatedBy %><br />
    Generated On: <%= complaintt.generatedOn %>
  </footer>
</body>
</html>
